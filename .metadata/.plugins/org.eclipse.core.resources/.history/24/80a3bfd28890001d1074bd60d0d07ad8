package ex01_0110;

public class Ex07배열복습 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		// 배열
		// - 동일한 자료형이 순차적으로 나열된 것
		// - 각 공간안에 번호를 매겨놨다. 그것을 우리는 인덱스라고 부른다.
		// - 배열의 인덱스는 0부터 시작한다.
		// - 배열은 값을 담는 변수가 아닌 주소를 담는 래퍼런스 변수이다.
		// - 배열의 길이는 배열 생성시에 결정이 된다. 나중에 바꿀 수 없다.
		// - 배열의 길이는 length 라는 필드에 저장.
		
		//배열 생성방법
		// 예시 ) 길이가 3인 정수형 배열 array를 만들고 값 10, 20, 30 넣기
		//1. 배열을 먼저 생성하고 나서 값을 넣는 방법
		int [] array1 = new int[3]; //배열 먼저 생성
		
		array1[0] = 10; //이후 값을 넣음
		array1[1] = 20;
		array1[2] = 30;
		
		//2. 배열을 생성과 동시에 값을 넣는 방법
		int [] array2 = {10, 20,  30};
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
	}

}
