package Study;

public class Ex03_1부터100까지더하고빼기 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		//1-2+3-4+5-6+...+99-100
		//그리고 답 -50
		int sum = 0;
		
		for(int i = 0 ; i <=10 ; i ++) {
			
			if (i % 2 == 0) {
				
				i= i * -1;
				
			}
			System.out.println(i);
			sum = i + sum;
			
			}
			
		
		System.out.println("답 : "+ sum);
		
		
		
		
		
		
		
		
		
		
	}

}
