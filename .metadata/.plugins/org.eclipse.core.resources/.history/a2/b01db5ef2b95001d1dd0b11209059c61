package Study;

public class Ex03_1부터100까지더하고빼기 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		//1-2+3-4+5-6+...+99-100
		//그리고 답 -50
		int sum = 0;
		int i = 1;
		while ( i <= 10) {
			if (i % 2 == 0) {
				
				System.out.print("-" + i);
			}else {
				System.out.print("+"+ i);
			}
			i++;
			sum = i + sum;
		}
		System.out.println("답 : "+ sum);
		
		
		
		
		
		
		
		
		
		
	}

}
