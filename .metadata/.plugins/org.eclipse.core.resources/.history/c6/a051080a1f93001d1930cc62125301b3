package Study;

import java.util.Scanner;

public class ex02시급계산기 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		Scanner sc = new Scanner(System.in);
		System.out.println("일한시간을 입력하세요 : ");

		
		int workTime = 8;
		int workTimePay = 5000;
		int sum = 0;
		//정규시간 8시간 * 5000 + 1시간 * 1.5배
		
		int time = sc.nextInt();
		if (time < workTime) {  //정규시간 일하는거고
			
			sum = time * workTimePay;
			System.out.printf("총 임금은 %d원 입니다.", sum);
		} else { //초과근무를 일하는걸 여기에 써줄꺼야
			
			sum = 5000 * 8;
			double sum2 = (( time- workTime) * workTimePay * 1.5) + sum;
			System.out.printf("총 임금은 %d원 입니다.", sum2);
		}
		
		
		

	}

}
