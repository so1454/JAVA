package Study;

import java.util.Scanner;

public class Ex05_별삼각형 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		Scanner sc = new Scanner(System.in);
		System.out.println("행 개수 : ");
		int hang = sc.nextInt();
		
		
		for(int i = 0 ; i <= hang ; i ++) {
			for (int j = 0; j<=i ; j ++) {
				System.out.print("*");
			}
			
		}
		
		
		
	}

}
